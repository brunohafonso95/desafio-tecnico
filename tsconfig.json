{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "removeComments": false,
    "strict": true,
    "noImplicitReturns": false,
    "baseUrl": ".",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@tests/*": ["./__tests__/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  }
}
